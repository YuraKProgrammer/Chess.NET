<Window x:Class="Chess.DesktopClient.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess.DesktopClient"
        mc:Ignorable="d"
        Title="GameWindow" Height="900" Width="1600">
    <Grid>
        <Canvas Width="800" Height="800" x:Name="_canvas" MouseLeftButtonUp="SelectFigure" MouseRightButtonUp="SetFigure"/>
        <TextBlock Margin="10,42,1350,770" x:Name="turn"/>
    </Grid>
</Window>
